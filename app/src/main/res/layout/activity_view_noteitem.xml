<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
<LinearLayout
        android:id="@+id/viwMainLinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/viwDateRelLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
    		<TextView
            android:id="@+id/viwCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" 
            android:text="created"
            android:textAppearance="?android:attr/textAppearanceSmall" >
        	</TextView>

        	<TextView
            android:id="@+id/viwModified_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:text="modified"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
        
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/viwTitleLinLayout">

        <TextView
            android:id="@+id/viwNoteTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/viwNoteTitle"
            android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:ems="10" 
            android:background="@drawable/edit"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceMedium">
          
        </TextView>
        
    </LinearLayout>
    

	    <TextView
	        android:id="@+id/viwNoteTagsText"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="0.19"
	        android:gravity="center_horizontal"
	        android:text="Tag It: NO Tag"
	        android:textAppearance="?android:attr/textAppearanceMedium" />



    </LinearLayout>
	
	

	<!--<ListView
	    android:id="@+id/textViwNotification"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent" >-->

		
	    <TextView
	        android:id="@+id/viwRemainderText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/time_button"
	        android:gravity="center_horizontal"
	        android:text="Reminder: yyyy/mm/dd hh:mm "
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    


	<LinearLayout
	    android:id="@+id/viwMainNoteDataLinLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="8dp">

    <TextView
        android:id="@+id/viwNoteDataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/viwNoteData"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:autoLink="all" 
        android:singleLine="false"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:paddingLeft="8dp"
        android:background="@drawable/edit"
        android:textAppearance="?android:attr/textAppearanceMedium">
		
    </TextView>
    
    </LinearLayout>
</LinearLayout>